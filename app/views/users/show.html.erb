<div class="main_content">
  <div class="row" id="recipe_top">
    <div class="col-md-8">
      
        <div class="container">
          <h1>
            <%= @user.name %> 
          </h1>
            <h3>Commitment:</h3>
            	<%= @user.commitment %>

            <h3>Website:</h3>
              <%=link_to @user.website, "http://#{@user.website}"%>

            <h3>Birthday:</h3>
            	<%= @user.birthday %>
            <h3>Short Bio:</h3>
            	<%= @user.user_description %>

						<h3>All users:</h3>
            	<%= link_to "Show ",users_path %>

            <h3>My Skills:</h3>
              <% @user.tags.any? %>
                <% @user.tags.each do |tag| %>
                <span class="label label-teal">
                  <%= link_to tag.name, tag_path(tag.name) %>  
                </span>
          <% end %>

          	
        </div>
    </div>
  </div>
</div>

    <div class="row">
    <div class="col-md-12">
      <%= link_to "Back", root_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
