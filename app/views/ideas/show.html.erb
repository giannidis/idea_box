<div class="main_content">
  <div class="row" id="recipe_top">
    <div class="col-md-4">
      <%= image_tag @idea.image.url(:medium), class: "idea_image" %>
    </div>
    <div class="col-md-8">
      <div id="idea_info">
        <div class="container">
          <h1>
            <%= @idea.title %>
          </h1>
          <p class="description">
            <%= @idea.description %>
          </p>
          <p>
            Submitted by
            <%= @idea.user.email %>
          </p>
          <% @idea.tags.any? %>
            <% @idea.tags.each do |tag| %>
            <span class="label label-teal">
              <%= link_to tag.name, tag_path(tag.name) %>
            </span>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

  <div class="row">
    <div class="col-md-6">
      <div id="requirements">
        <h2>Requirements</h2>
        <ul>
          <% @idea.requirements.each do |requirement| %>
            <li>
              <%= requirement.name %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div id="qualifications">
      <h2>Qualifications</h2>
      <ul>
        <% @idea.qualifications.each do |qualification| %>
          <li>
            <%= qualification.add %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to "Back", root_path, class: "btn btn-default" %>
      <% if user_signed_in? %>

        <%= link_to "Edit", edit_idea_path, class: "btn btn-default" %>
        <%= link_to "Delete", idea_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
