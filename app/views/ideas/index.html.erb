<% @idea.each_slice(3) do |ideas| %>
  <div class="row">
    <% ideas.each do |idea| %>
      <div class="col-md-4">
        <div class="idea">
          <div class="image_wrapper">
            <%= link_to idea do %>
              <%= image_tag idea.image.url(:medium) %>
            <% end %>
          </div>
          <h2>
            <%= link_to idea.title, idea %>
          </h2>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
